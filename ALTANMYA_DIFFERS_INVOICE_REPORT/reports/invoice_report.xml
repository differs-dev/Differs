<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="differs_invoice_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="header">
                            <div style="text-align:left">
                                <div style="font-weight: bold; text-align:left; font-size: 17pt;">
                                    <span t-esc="o.company_id.name"/>
                                </div>
                                <br/>
                                <div style="text-align:left; font-style: italic; font-size: 12pt">
                                    <span t-esc="o.company_id.street"/>
                                </div>
                                <div style="text-align:left; font-style: italic; font-size: 12pt">
                                    <span t-esc="o.company_id.street2"/>
                                </div>
                                <div style="text-align:left; font-size: 12pt">
                                    <span t-esc="o.company_id.city"/>
                                </div>
                                <div style="text-align:left; font-size: 12pt">
                                    <span>Tel:</span>
                                    <span t-esc="o.company_id.phone"/>
                                    <span>Fax:</span>
                                    <span t-esc="o.company_id.fax"/>
                                    <span>E-mail:</span>
                                    <span t-esc="o.company_id.email"/>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="page">
                            <div class="row">
                                <div class="col-6">
                                    <div style="text-align:left; font-weight: bold; font-size: 13pt;">
                                        <span style="padding-right: 80px;">FACTURE</span>
                                        <span>N°</span>
                                        <span t-esc="o.name"/>
                                    </div>
                                    <br/>
                                    <div style="border-radius: 8px;                              border: 1px solid black;                               padding: 20px;                               width: 400px;                               height: 115px;">
                                        <div style="text-align:left; ">
                                            <span style="padding-right: 30px">Date Facture:</span>
                                            <span style="font-weight: bold;" t-esc="o.invoice_date"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span style="padding-right: 52px">Echéance:</span>
                                            <span style="padding-left : 4px" t-esc="o.invoice_date_due"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span style="padding-right: 49px">Ref Client:</span>
                                            <t t-foreach="o.line_ids.sale_line_ids.order_id" t-as="ref">
                                                <span t-esc="ref.name"/>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 ">
                                    <div style="text-align:center; font-size: 10pt; padding-right:50px; margin-bottom:-10px; ">
                                        <span style="background-color: #ffffff;">Client</span>
                                    </div>
                                    <div style="border-radius: 8px;                border: 1px solid black;                            padding: 20px;                               width: 400px;                               height: 170px;">
                                        <div style="text-align:left; ">
                                            <span t-esc="o.partner_id.name"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span t-esc="o.partner_id.street"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span t-esc="o.partner_id.street2"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span t-esc="o.partner_id.city"/>
                                            <span t-esc="o.partner_id.state_id.name"/>
                                            <span t-esc="o.partner_id.zip"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span t-esc="o.partner_id.country_id.name"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span t-esc="o.partner_id.email"/>
                                        </div>
                                        <div style="text-align:left; ">
                                            <span t-esc="o.partner_id.phone"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <table class="table table table-sm" style="border: 1px solid black !important;">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>CT</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Code</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Description</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Quantité</span>
                                        </th>

                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Prix</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Taxes</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Total</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody style="border-top:0px">

                                    <t t-foreach="o.line_ids.sale_line_ids.order_id" t-as="x">
                                        <!--                                        <span t-esc="x"/>-->

                                        <t t-set="total_sum" t-value="0"/>
                                        <t t-set="counter" t-value="1"/>

                                        <t t-foreach="x.picking_ids" t-as="delivery">

                                            <t t-if="delivery.picking_type_code == 'outgoing'">
                                                <tr class="text-left">
                                                    <td style="background-color: #dddddd; font-weight: bold;"
                                                        colspan="10">
                                                        <span style="padding-right: 20px; padding-left:  50px;">Notre
                                                            BL

                                                        </span>
                                                        <span style="padding-right: 20px" t-esc="delivery.name"/>
                                                        <span style="padding-right: 100px" t-esc="delivery.date_done"/>
                                                        <span style="padding-right: 20px">Livraiso</span>
                                                        <span t-esc="o.partner_id.name"/>
                                                    </td>
                                                </tr>
                                                <t t-foreach="o.invoice_line_ids" t-as="delivery_line">
                                                    <t t-if="delivery_line.referance_from_sale == x.name">
                                                        <tr class="text-center">
                                                            <td style="border: 1px solid black !important; ">
                                                                <span t-esc="counter"/>
                                                            </td>
                                                            <td style="border: 1px solid black !important;">
                                                                <span t-esc="delivery_line.product_id.default_code"/>
                                                            </td>
                                                            <td style="border: 1px solid black !important;">
                                                                <span t-esc="delivery_line.product_id.name"/>
                                                            </td>
                                                            <td style="border: 1px solid black !important;">
                                                                <span t-esc="delivery_line.quantity"/>
                                                            </td>
                                                            <td style="border: 1px solid black !important;">
                                                                <span t-esc="delivery_line.price_unit"/>
                                                                <span t-esc="delivery_line.currency_id.symbol"/>
                                                            </td>
                                                            <td style="border: 1px solid black !important;">
                                                                <span t-esc="delivery_line.tax_ids.name"/>
                                                            </td>
                                                            <td style="border: 1px solid black !important;">
                                                                <span t-esc="delivery_line.price_unit * delivery_line.quantity"/>
                                                            </td>
                                                            <t t-set="total_sum"
                                                               t-value="total_sum + (delivery_line.price_unit * delivery_line.quantity)"/>
                                                        </tr>

                                                    </t>
                                                </t>

                                            </t>


                                        </t>


                                        <tr>
                                            <td colspan="8"
                                                style="border: 1px solid black !important; text-align: right; padding-right: 23px">
                                                <span>Sous-total:</span>
                                                <span style="margin-left:4px"
                                                      t-esc="'{0:,.2f}'.format(float(total_sum))"/>
                                            </td>
                                        </tr>
                                    </t>


                                </tbody>
                            </table>
                            <table class="table table-sm" style="border: 1px solid black !important">
                                <thead>
                                    <tr>
                                        <th style="border: 1px solid black !important;">

                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Total HT</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Taxe</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Taxes</span>
                                        </th>
                                        <th class="text-center" style="border: 1px solid black !important;">
                                            <span>Total</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody style="border-top:0px">


                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                    <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                        <t t-set="counter" t-value="1"/>

                                        <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                        <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]"
                                           t-as="amount_by_group">
                                            <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">

                                                <tr class="text-center">
                                                    <td style="border: 1px solid black !important; ">
                                                                <span t-esc="counter"/>
                                                            </td>
                                                    <td style="border: 1px solid black !important;">
                                                        <span t-esc="o.amount_untaxed"/>
                                                    </td>
                                                    <td style="border: 1px solid black !important;">
                                                        <span t-esc="o.amount_tax"/>
                                                    </td>
                                                    <td style="border: 1px solid black !important;">
                                                        <span t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                    </td>
                                                    <td style="border: 1px solid black !important;">
                                                        <span t-esc="o.amount_total"/>
                                                    </td>
                                                </tr>
                                                <t t-set="counter" t-value="counter + 1"/>
                                            </t>
                                            <t t-else="">
                                                <span class="text-right"
                                                      t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                            </t>
                                        </t>
                                    </t>

                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-6 ">
                                    <div style="text-align:left;">
                                        <span style="padding-right: 10px; font-weight: bold;">Mode de règlement :</span>
                                        <span t-esc="o.invoice_payment_term_id.name"/>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div style="margin-left:225px ;border-radius: 8px;                          border: 3px solid black;                               padding: 20px;                               width: 180px;                               height: 60px;">
                                        <div class="row"
                                             style="text-align:center; margin-top:-18px; font-weight: bold;">
                                            <span style="padding-left: 25px">Net à Payer</span>
                                        </div>
                                        <div style="text-align:center; margin-top: -3px; font-weight: bold;">
                                            <span t-esc="o.amount_residual"/>
                                            <span t-esc="o.currency_id.name"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <div class="row" style="border-top: 3px solid black !important;">
                                <div class="col-6">
                                    <div style="text-align:left;justify-content: space-between;">
                                        <span>RC:</span>
                                        <span t-esc="o.company_id.company_registry"/>
                                        <span style="padding-left: 10px">Siret:</span>
                                        <!--                                        <span t-esc="o.company_id.siret"/>-->
                                    </div>
                                </div>
                                <div class="col-6 ">
                                    <div style="text-align:left;justify-content: space-between;">
                                        <span style="padding-left: 20px">Ape:</span>
                                        <!--                                        <span t-esc="o.company_id.ape"/>-->
                                        <span style="padding-left: 10px">N° TVA:</span>
                                        <!--                                        <span t-esc="o.company_id.vat"/>-->
                                    </div>
                                </div>
                            </div>
                            <div style="text-align:center;justify-content: space-between;">
                                <span>Page:</span>
                                <span class="page"/>
                                sur
                                <span class="topage"/>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>